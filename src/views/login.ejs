<%- include('partials/header'); -%>

<div class="container">
    <h1>Login</h1>
    <div class="error"></div>
    <form id="login-form">
        <label for="email"></label>
        <input type="email" id="email" name="email" placeholder="Email" />
        <label for="password"></label>
        <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
        />
        <button class="green" type="submit">Login</button>
    </form>
</div>
